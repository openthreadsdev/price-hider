{
  "manifest_version": 3,
  "name": "Price Hider",
  "version": "1.0.0",
  "description": "Hide prices on the current page.",

  "action": {
    "default_title": "Toggle Price Hider",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
